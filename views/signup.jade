script.
	function validate() {
		var invalid = false;
		var str = 'Please provide -: ';
		var input = document.getElementById("name").value;
		if(input == ""){
			str += 'Name ';
			invalid = true;
		}
		input = document.getElementById("age").value;
		if(input == "" || input <= 18){
			str += 'Age ';
			if(input <= 18 && input != "")
				str += '(Not old enough)' 
			invalid = true;
		}
		input = document.getElementById("username").value;
		if(input == ""){
			str += 'Username ';
			invalid = true;
		}
		input = document.getElementById("password").value;
		if(input == ""){
			str += 'Password ';
